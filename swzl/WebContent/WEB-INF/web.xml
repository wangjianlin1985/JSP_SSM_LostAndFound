<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.5"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<!-- 设置传输编码为UTF-8开始 -->  
      <filter>    
          <filter-name>encodingFilter</filter-name>    
          <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>    
          <init-param>    
              <param-name>encoding</param-name>    
              <param-value>UTF-8</param-value>    
          </init-param>    
          <init-param>    
              <param-name>forceEncoding</param-name>    
              <param-value>true</param-value>    
          </init-param>    
      </filter>    
      
      <filter-mapping>    
          <filter-name>encodingFilter</filter-name>    
          <url-pattern>/*</url-pattern>    
      </filter-mapping>    
	<!-- 设置传输编码为UTF-8结束 -->
	
	
	
	<!-- Spring MVC 相关配置开始 -->
	<servlet>
		<servlet-name>Dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name><!-- 加载springmvc配置文件 -->
			<param-value>classpath:spring_config/applicationContext-mvc.xml</param-value>
		</init-param>
		<!--**********下面两句添加之后，在tomcat启动的时候该项目就全部加载了*******
		  ******如果没有的话，只有在输入某一个被拦截的地址该项目才会被加载 ************-->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- Spring MVC 相关配置结束 -->
	
	
	<!-- 全局拦截器,所有的请求都是以.htm结束的 -->
	<servlet-mapping>
		<servlet-name>Dispatcher</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	   
	<!-- 设置session时效。貌似不起作用了。注销掉，在登录的时候设置 -->
	<!-- 
	<session-config>  
     	<session-timeout>1000</session-timeout>     
	</session-config>  
	-->
	 
	<!-- 错误页面的处理开始 -->
    <error-page> 
        <exception-type>java.lang.NullPointerException</exception-type> 
        <location>/login.jsp</location> 
    </error-page>
    <error-page> 
  		<error-code>404</error-code> 
  		<location>/login.jsp</location> 
	</error-page> 
    <!-- 错误页面的处理结束 -->
    
    <!-- 欢迎主页 -->
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>

	<!-- 自定义标签-->
	<jsp-config>
		<taglib>
			<taglib-uri>/priveliege</taglib-uri>
			<taglib-location>/WEB-INF/privilege.tld</taglib-location>
		</taglib>
	</jsp-config>
	<!-- 自定义标签 -->
	
</web-app>

